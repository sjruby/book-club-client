<div class="add-a-book">
  <h2> Add a book! </h2>
  <form class='userEvents' id='create-new-book'>
    <div class="form-group">
      <input type="text" name="book[title]" placeholder="Enter Book Title">
      <input type="text" name="book[status]" placeholder="Enter Book Status Here">
      <input type="text" name="book[location]" placeholder="Enter the address for BookClub">
      <input type="number" min="0" name="book[guestCount]" placeholder="Enter number of guests">
      <input type="text" name="book[startDate]" placeholder="Enter Start Date Here" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" title="start date needs to be a DATE : YYYY-MM-DD">
      <input type="text" name="book[endDate]" placeholder="Enter End Date Here" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" title="end date needs to be a DATE : YYYY-MM-DD">
    </div>
    <button type="submit" class="btn btn-default">Create Book</button>
  </form>

</div>
